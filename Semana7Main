package Semana7Aula;

import java.util.Scanner;
import java.text.DecimalFormat;


public class Semana7DeFormaCerta {
    
    public static void main(String[] args) {
        
        int opMenu;

        Empregado A = new Empregado("Isaac", "Newton", 10000);
        Empregado B = new Empregado("Nikola ", "Tesla", 12345);
        
        System.out.println("Nome: " + A.getNome() + " " + A.getSobreNome());
        System.out.println("Salario: " + A.getSalario());
        System.out.println("Salario anual: " + A.getSalario() * 12);
        System.out.println("Salario anual com aumento de 10%: " + A.aumento(A.getSalario()));
        
        System.out.println("Nome: " + B.getNome() + " " + B.getSobreNome());
        System.out.println("Salario: " + B.getSalario());
        System.out.println("Salario anual: " + B.getSalario() * 12);
        System.out.println("Salario anual com aumento de 10%: " + B.aumento(B.getSalario()));
                
    }
    
}
